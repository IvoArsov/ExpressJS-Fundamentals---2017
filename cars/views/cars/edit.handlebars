<form action="/cars/edit/{{this._id}}" method="POST">
  Make
  <input type="text" name="make" value="{{this.make}}" />
  <br />
  Model
  <input type="text" name="model" value="{{this.model}}" />
  <br />
  Year
  <input type="number" name="year" value="{{this.year}}" />
  <br />
  Price Per Day
  <input type="number" name="pricePerDay" value="{{this.pricePerDay}}" />
  <br />
  Power
  <input type="number" name="power" value="{{this.power}}" />
  <br />
  Image
  <input type="url" name="image" value="{{this.image}}" />
  <br />
  <input type="submit" value="Save" />
</form>